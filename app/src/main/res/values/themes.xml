<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->

    <style name="Theme.FoodComparisonAppNew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- theme here -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
    </style>

    <!-- Action Bar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/app_bar_background</item> <!-- Custom background -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Text Style for Action Bar -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
